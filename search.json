---
layout: null
permalink: /search.json
---
[
  {% assign docs = site.posts | concat: site.projects | concat: site.publications | concat: site.videos %}
  {% for doc in docs %}
  {
    "id": {{ doc.id | default: doc.url | jsonify }},
    "type": {{ doc.collection | default: "page" | jsonify }},
    "title": {{ doc.title | default: "Sans titre" | strip_html | normalize_whitespace | jsonify }},
    "url": {{ doc.url | relative_url | jsonify }},
    "date": {{ doc.date | date: "%Y-%m-%d" | jsonify }},
    "tags": {{ doc.tags | default: empty | jsonify }},
    "categories": {{ doc.categories | default: empty | jsonify }},
    "description": {{ doc.description | default: "" | strip_html | normalize_whitespace | jsonify }},
    "content": {{ doc.content | markdownify | strip_html | normalize_whitespace | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
